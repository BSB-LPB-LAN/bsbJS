{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["es2017", "es7", "dom", "esnext.asynciterable"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "watch": false,
    "baseUrl": "./src/"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "./**/*.ts"
  ],
}